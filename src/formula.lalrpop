use std::str::FromStr;

use value::Value;

grammar;

pub Formula = {
	Expr
}

Expr: i64 = {
    <l:Expr> "+" <r:Factor> => l + r,
    <l:Expr> "-" <r:Factor> => l - r,
    Factor,
};

Factor: i64 = {
    <l:Factor> "*" <r:Term> => l * r,
    <l:Factor> "/" <r:Term> => l / r,
    Term,
};

Term: i64 = {
    Num,
    "(" <Expr> ")",
};

Num: i64 = r"[0-9]+" => i64::from_str(<>).unwrap();
